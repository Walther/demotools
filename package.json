{
  "name": "demotool",
  "version": "0.0.1",
  "description": "`demotool` is a minimalistic tool for making WebGL intros. It aims to have as little javascript as possible, while providing you with a WebGL context to draw your shaders on. It also provides a minimal tracker for creating music.",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/webpack-cli/bin/cli.js --watch",
    "build": "./node_modules/webpack-cli/bin/cli.js build && ./pnginator.rb dist/main.js dist/packed.png.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Walther/demotool.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Walther/demotool/issues"
  },
  "homepage": "https://github.com/Walther/demotool#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "webpack": "^5",
    "webpack-cli": "^5",
    "webpack-glsl-loader": "^1.0.1"
  }
}
